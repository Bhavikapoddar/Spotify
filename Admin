@model HotelManagementSystem.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<h2>Are you sure you want to delete this room?</h2>

<table border="1" cellpadding="10">
    <tr><th>Room Number</th><td>@Model.RoomNumber</td></tr>
    <tr><th>Room Type</th><td>@Model.RoomType</td></tr>
    <tr><th>Capacity</th><td>@Model.Capacity</td></tr>
    <tr><th>Price</th><td>@Model.Price</td></tr>
    <tr><th>Status</th><td>@Model.Status</td></tr>
</table>

@using (Html.BeginForm("DeleteConfirmed", "Rooms", new { id = Model.RoomID }))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" />
    <a href="@Url.Action("Index")">Cancel</a>
}
