    margin-bottom: 30px; /* More vertical spacing between fields */
}

.col-md-3 { width: 25%; }
.col-md-4 { width: 33.3333%; }
.col-md-6 { width: 50%; }

/* Responsive for Mobile (Media Query) */
@media (max-width: 768px) {
    body {
        padding: 20px; /* Adjusted padding on very small screens */
    }
    .passenger-container {
        padding: 30px; /* Adjusted padding inside container on small screens */
        border-radius: 20px; /* Smaller border-radius on small screens */
    }
    .passenger-card {
        padding: 30px; /* Adjusted padding inside cards on small screens */
        border-radius: 15px; /* Smaller border-radius for cards on small screens */
    }
    h2.passenger-title {
        font-size: 2.2rem; /* Adjust title size for smaller screens */
        margin-bottom: 3.5rem;
    }
    .passenger-card h5 {
        font-size: 1.3rem; /* Adjust card title size */
    }
    .col-md-3, .col-md-4, .col-md-6 {
        width: 100%; /* Columns stack vertically */
        float: none; /* Remove float */
        padding: 0;
        margin-bottom: 25px; /* Consistent spacing when stacked */
    }
}

