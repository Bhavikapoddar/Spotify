// Inside AccountController.cs

using System.Web.Mvc;
using System.Web.Security; // Required for FormsAuthentication

public class AccountController : Controller
{
    // ... (Your other actions like Login, etc.) ...

    [HttpPost]
    [ValidateAntiForgeryToken] // Recommended for security
    public ActionResult Logout()
    {
        FormsAuthentication.SignOut(); // This clears the authentication cookie
        Session.Clear(); // This clears all session data
        Session.Abandon(); // This destroys the session

        // Redirect to the login page
        return RedirectToAction("Login", "Account");
    }

    // A GET version for simplicity, though the POST method is more secure
    public ActionResult Logout()
    {
        FormsAuthentication.SignOut();
        Session.Clear();
        Session.Abandon();
        return RedirectToAction("Login", "Account");
    }
}
