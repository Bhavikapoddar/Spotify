@model HotelManagementSystem.Models.Room

@{
    ViewBag.Title = "Create Room";
}

<h2>Create Room</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <label>Room Number:</label>
        @Html.TextBoxFor(m => m.RoomNumber, new { required = "required" })
    </div>

    <div>
        <label>Room Type:</label>
        @Html.DropDownListFor(m => m.RoomType,
            new SelectList(new[] { "AC", "Non-AC", "Deluxe" }),
            "--Select--")
    </div>

    <div>
        <label>Capacity:</label>
        @Html.TextBoxFor(m => m.Capacity, new { type = "number", min = "1", required = "required" })
    </div>

    <div>
        <label>Price:</label>
        @Html.TextBoxFor(m => m.Price, new { type = "number", step = "0.01", required = "required" })
    </div>

    <div>
        <label>Status:</label>
        @Html.DropDownListFor(m => m.Status,
            new SelectList(new[] { "Available", "Booked", "Maintenance" }),
            "--Select--")
    </div>

    <div>
        <input type="submit" value="Create" />
        <a href="@Url.Action("Index")">Cancel</a>
    </div>
}
.....
....
