@model Hotel1.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Gender</dt>
        <dd>@Model.Gender</dd>

        <dt>Phone</dt>
        <dd>@Model.Phone</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>ID Proof</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.IDProof))
            {
                <img src="~/Images/IdProofs/@Model.IDProof" alt="ID Proof" width="100" height="100" />
            }
        </dd>

        <dt>No. of People</dt>
        <dd>@Model.NoOfPeople</dd>

        <dt>Payment Status</dt>
        <dd>@Model.PaymentStatus</dd>

        <dt>Current Bill</dt>
        <dd>@Model.CurrentBill</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Customer", new { id = Model.CustomerID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
