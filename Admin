EditFlight. cshmtl
@model Airline.Models.Flight
@{
    Layout = null;
    var routes = ViewBag.Routes as List<Airline.Models.SearchRequest>;
}
<!DOCTYPE html>
<html>
<head>
    <title>Edit Flight</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light p-4">
    <div class="container">
        <h2 class="text-primary mb-4">Edit Flight</h2>
        <form method="post" action="/Admin/EditFlight" class="border p-4 bg-white rounded shadow-sm">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label>Route:</label>
                <select name="RouteId" class="form-control" required>
                    <option value="">-- Select Route --</option>
                    @foreach (var r in routes)
                    {
                        <option value="@r.RouteId" @(r.RouteId == Model.RouteId ? "selected" : "")>
                            @r.From ‚Üí @r.To | @r.DepartureDate.ToString("dd MMM")
                        </option>
                    }
                </select>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Departure City:</label>
                    <input type="text" name="DepartureCity" class="form-control" value="@Model.DepartureCity" required />
                </div>
                <div class="form-group col-md-6">
                    <label>Arrival City:</label>
                    <input type="text" name="ArrivalCity" class="form-control" value="@Model.ArrivalCity" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Departure Time:</label>
                    <input type="datetime-local" name="DepartureTime" class="form-control"
                           value="@Model.DepartureTime.ToString("yyyy-MM-ddTHH:mm")" required />
                </div>
                <div class="form-group col-md-6">
                    <label>Arrival Time:</label>
                    <input type="datetime-local" name="ArrivalTime" class="form-control"
                           value="@Model.ArrivalTime.ToString("yyyy-MM-ddTHH:mm")" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Economy Price:</label>
                    <input type="number" name="EconomyPrice" class="form-control" value="@Model.EconomyPrice" required />
                </div>
                <div class="form-group col-md-4">
                    <label>Economy Seats:</label>
                    <input type="number" name="EconomySeats" class="form-control" value="@Model.EconomySeats" required />
                </div>
                <div class="form-group col-md-4">
                    <label>Business Price:</label>
                    <input type="number" name="BusinessPrice" class="form-control" value="@Model.BusinessPrice" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Business Seats:</label>
                    <input type="number" name="BusinessSeats" class="form-control" value="@Model.BusinessSeats" required />
                </div>
                <div class="form-group col-md-3">
                    <label>First Class Price:</label>
                    <input type="number" name="FirstClassPrice" class="form-control" value="@Model.FirstClassPrice" />
                </div>
                <div class="form-group col-md-3">
                    <label>First Class Seats:</label>
                    <input type="number" name="FirstClassSeats" class="form-control" value="@Model.FirstClassSeats" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Airplane ID:</label>
                    <input type="text" name="AirplaneId" class="form-control" value="@Model.AirplaneId" required />
                </div>
                <div class="form-group col-md-6">
                    <label>Airplane Number:</label>
                    <input type="text" name="AirplaneNumber" class="form-control" value="@Model.AirplaneNumber" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Update Flight</button>
            <a href="/Admin/AddFlight" class="btn btn-secondary ml-2">Cancel</a>
        </form>
