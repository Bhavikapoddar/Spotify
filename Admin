@model HotelManagementSystem.Models.Room

@{
    ViewBag.Title = "Edit Room";
}

<h2>Edit Room</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RoomID)

    <div>
        <label>Room Number:</label>
        @Html.TextBoxFor(m => m.RoomNumber, new { required = "required" })
    </div>

    <div>
        <label>Room Type:</label>
        @Html.DropDownListFor(m => m.RoomType,
            new SelectList(new[] { "AC", "Non-AC", "Deluxe" }, Model.RoomType),
            "--Select--")
    </div>

    <div>
        <label>Capacity:</label>
        @Html.TextBoxFor(m => m.Capacity, new { type = "number", required = "required" })
    </div>

    <div>
        <label>Price:</label>
        @Html.TextBoxFor(m => m.Price, new { type = "number", step = "0.01", required = "required" })
    </div>

    <div>
        <label>Status:</label>
        @Html.DropDownListFor(m => m.Status,
            new SelectList(new[] { "Available", "Booked", "Maintenance" }, Model.Status),
            "--Select--")
    </div>

    <div>
        <input type="submit" value="Save" />
        <a href="@Url.Action("Index")">Cancel</a>
    </div>
}
