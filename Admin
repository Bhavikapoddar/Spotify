EditRoute

@model Airline.Models.SearchRequest

@{
    ViewBag.Title = "Edit Route";
}

<h2>Edit Route</h2>

@using (Html.BeginForm("EditRoute", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(model => model.RouteId)

    <div>
        <label>From:</label>
        @Html.TextBoxFor(model => model.From, new { @class = "form-control" })
    </div>

    <div>
        <label>To:</label>
        @Html.TextBoxFor(model => model.To, new { @class = "form-control" })
    </div>

    <div>
        <label>Departure Date:</label>
        @Html.TextBoxFor(model => model.DepartureDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
    </div>

    <div>
        <label>Route Number:</label>
        @Html.TextBoxFor(model => model.RouteNumber, new { @class = "form-control" })
    </div>

    <br />
    <input type="submit" value="Update Route" class="btn btn-primary" />
}
