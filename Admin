using System.Collections.Generic;
using System.Linq;
using System.Web.Mvc;
using HotelManagementSystem.Models;

namespace HotelManagementSystem.Controllers
{
    public class StaffsController : Controller
    {
        private HotelDbContext db = new HotelDbContext();

        // GET: Staffs
        public ActionResult Index(string search)
        {
            var staffs = db.Staff.ToList();

            if (!string.IsNullOrEmpty(search))
            {
                staffs = staffs.Where(s => s.Name.ToLower().Contains(search.ToLower())
                                        || s.Role.ToLower().Contains(search.ToLower())
                                        || s.Phone.Contains(search)
                                        || s.Email.ToLower().Contains(search.ToLower())).ToList();
            }

            return View(staffs);
        }

        // GET: Staffs/Create
        public ActionResult Create()
        {
            ViewBag.RoleList = GetRoleList();
            return View();
        }

        // POST: Staffs/Create
        [HttpPost]
        public ActionResult Create(Staff staff)
        {
            if (ModelState.IsValid)
            {
                db.Staff.Add(staff);
                db.SaveChanges();
                return RedirectToAction("Index");
            }

            ViewBag.RoleList = GetRoleList();
            return View(staff);
        }

        // GET: Staffs/Edit/5
        public ActionResult Edit(int id)
        {
            var staff = db.Staff.Find(id);
            if (staff == null)
            {
                return HttpNotFound();
            }

            ViewBag.RoleList = GetRoleList();
            return View(staff);
        }

        // POST: Staffs/Edit/5
        [HttpPost]
        public ActionResult Edit(Staff updatedStaff)
        {
            if (ModelState.IsValid)
            {
                var existingStaff = db.Staff.Find(updatedStaff.StaffID);
                if (existingStaff != null)
                {
                    existingStaff.Name = updatedStaff.Name;
                    existingStaff.Role = updatedStaff.Role;
                    existingStaff.Phone = updatedStaff.Phone;
                    existingStaff.Email = updatedStaff.Email;

                    db.SaveChanges();
                    return RedirectToAction("Index");
                }
            }

            ViewBag.RoleList = GetRoleList();
            return View(updatedStaff);
        }

        // GET: Staffs/Delete/5
        public ActionResult Delete(int id)
        {
            var staff = db.Staff.Find(id);
            if (staff != null)
            {
                db.Staff.Remove(staff);
                db.SaveChanges();
            }
            return RedirectToAction("Index");
        }

        // Helper Method for Role Drop-down
        private List<SelectListItem> GetRoleList()
        {
            return new List<SelectListItem>
            {
                new SelectListItem { Text = "Manager", Value = "Manager" },
                new SelectListItem { Text = "Receptionist", Value = "Receptionist" },
                new SelectListItem { Text = "Cleaner", Value = "Cleaner" },
                new SelectListItem { Text = "Cook", Value = "Cook" }
            };
        }
    }
}
