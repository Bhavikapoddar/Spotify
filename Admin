/* Responsive for Mobile (Media Query) */
@media (max-width: 768px) {
    body {
        padding: 15px; /* Less padding on very small screens */
    }
    .passenger-container {
        padding: 25px; /* Less padding inside container on small screens */
        border-radius: 15px; /* Smaller border-radius on small screens */
    }
    .passenger-card {
        padding: 25px; /* Less padding inside cards on small screens */
        border-radius: 12px; /* Smaller border-radius for cards on small screens */
    }
    h2.passenger-title {
        font-size: 2rem; /* Adjust title size for smaller screens */
        margin-bottom: 3rem;
    }
    .passenger-card h5 {
        font-size: 1.2rem; /* Adjust card title size */
    }
    .col-md-3, .col-md-4, .col-md-6 {
        width: 100%; /* Columns stack vertically */
        float: none; /* Remove float */
        padding: 0;
        margin-bottom: 20px; /* Consistent spacing when stacked */
    }
}

