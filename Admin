[HttpGet]
public ActionResult Delete(int? id)
{
    if (id == null)
    {
        return new HttpStatusCodeResult(HttpStatusCode.BadRequest);
    }

    Customer customer = db.Customers.Find(id);
    if (customer == null)
    {
        return HttpNotFound();
    }

    db.Customers.Remove(customer);
    db.SaveChanges();
    return RedirectToAction("Index");
}
