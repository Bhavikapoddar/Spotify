@model IEnumerable<HotelManagementSystem.Models.Staff>

@{
    ViewBag.Title = "Staff List";
}

<h2>Staff List</h2>

<form method="get">
    <input type="text" name="search" placeholder="Search by name" value="@Request.Query["search"]" />
    <button type="submit">Search</button>
    <a href="/Staffs/Create">Add New</a>
</form>

<table border="1" cellpadding="8" cellspacing="0">
    <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Name</td>
        <td>@item.Role</td>
        <td>@item.Phone</td>
        <td>@item.Email</td>
        <td>
            <a href="/Staffs/Edit/@item.StaffID">Edit</a> |
            <a href="/Staffs/Delete/@item.StaffID">Delete</a>
        </td>
    </tr>
}
</table>
