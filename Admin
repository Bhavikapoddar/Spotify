@model IEnumerable<Hotelmanagementsystem.Models.Customers>
@{
    ViewBag.Title = "Customer List";
}

<h2>Customer List</h2>

<!-- Search Form -->
@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
    <p>
        Search by Name or Email:
        @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new
        {
            @class = "form-control",
            placeholder = "Enter name or email",
            style = "width: 250px; display: inline-block; margin-right: 10px;"
        })
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Gender)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Phone)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IDProof)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NoOfPeople)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PaymentStatus)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CurrentBill)</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Gender</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.IDProof))
                    {
                        <img src="~/Uploads/@item.IDProof" width="60" height="60" style="object-fit:cover; border-radius:5px;" />
                    }
                    else
                    {
                        <span style="color:gray;">No Photo</span>
                    }
                </td>
                <td>@item.NoOfPeople</td>
                <td>@item.PaymentStatus</td>
                <td>@item.CurrentBill</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    h2 {
        margin-bottom: 20px;
        color: #333;
    }

    table {
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

    th {
        background-color: #f1f1f1;
        text-align: center;
        font-weight: bold;
    }

    td {
        text-align: center;
        vertical-align: middle;
    }

    img {
        border: 1px solid #ccc;
        padding: 2px;
        background: #fafafa;
    }
</style>
