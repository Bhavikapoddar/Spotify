@model Hotel1.Models.Customer
@{
    ViewBag.Title = "Edit Customer";
}

<h2>Edit Customer</h2>

@using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CustomerID)
    @Html.HiddenFor(model => model.IDProof)

    <div style="max-width: 600px; padding: 20px; border: 1px solid #ccc; border-radius: 8px;">
        <div style="margin-bottom: 15px;">
            <label>Name</label><br />
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Gender</label><br />
            @Html.DropDownListFor(model => model.Gender,
                new SelectList(new[] { "Male", "Female", "Other" }, Model.Gender),
                "Select Gender",
                new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.Gender)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Phone</label><br />
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Email</label><br />
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Current ID Proof Image</label><br />
            @if (!string.IsNullOrEmpty(Model.IDProof))
            {
                <img src="~/Images/IdProofs/@Model.IDProof" width="100" height="100" style="object-fit: cover; border: 1px solid #ccc;" /><br />
            }
            else
            {
                <span>No image uploaded.</span><br />
            }

            <label>Change ID Proof Photo</label><br />
            <input type="file" name="ImageFile" accept="image/*" class="form-control" style="width:100%;" />
        </div>

        <div style="margin-bottom: 15px;">
            <label>No. of People</label><br />
            @Html.TextBoxFor(model => model.NoOfPeople, new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.NoOfPeople)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Payment Status</label><br />
            @Html.DropDownListFor(model => model.PaymentStatus,
                new SelectList(new[] { "Paid", "Unpaid", "Pending" }, Model.PaymentStatus),
                "Select Payment Status",
                new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.PaymentStatus)
        </div>

        <div style="margin-bottom: 15px;">
            <label>Current Bill</label><br />
            @Html.TextBoxFor(model => model.CurrentBill, new { @class = "form-control", style = "width:100%;" })
            @Html.ValidationMessageFor(model => model.CurrentBill)
        </div>

        <input type="submit" value="Update" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary", style = "margin-left:10px;" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
