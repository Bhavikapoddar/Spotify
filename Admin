/* Column Layout (Responsive using floats) */
.row::after {
    content: "";
    display: table;
    clear: both;
}

.col-md-3, .col-md-4, .col-md-6 {
    float: left;
    padding: 0 18px; /* Increased horizontal padding for columns */
