@model Hotel1.Models.Customer

@{
    ViewBag.Title = "Add Customer";
}

<h2>Add New Customer</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <table>
        <tr><td>@Html.LabelFor(model => model.Name)</td><td>@Html.TextBoxFor(model => model.Name)</td></tr>
        <tr><td>@Html.LabelFor(model => model.Gender)</td><td>@Html.TextBoxFor(model => model.Gender)</td></tr>
        <tr><td>@Html.LabelFor(model => model.Phone)</td><td>@Html.TextBoxFor(model => model.Phone)</td></tr>
        <tr><td>@Html.LabelFor(model => model.Email)</td><td>@Html.TextBoxFor(model => model.Email)</td></tr>
        <tr><td>@Html.LabelFor(model => model.IDProof)</td><td>@Html.TextBoxFor(model => model.IDProof)</td></tr>
        <tr><td>@Html.LabelFor(model => model.NoOfPeople)</td><td>@Html.TextBoxFor(model => model.NoOfPeople)</td></tr>
        <tr><td>@Html.LabelFor(model => model.PaymentStatus)</td><td>@Html.TextBoxFor(model => model.PaymentStatus)</td></tr>
        <tr><td>@Html.LabelFor(model => model.CurrentBill)</td><td>@Html.TextBoxFor(model => model.CurrentBill)</td></tr>
    </table>

    <input type="submit" value="Create" />
}

<p><a href="@Url.Action("Index")">Back to List</a></p>
