public ActionResult Statistics()
{
    var data = _context.RoomBookings
        .Include(rb => rb.Room)  // Make sure Room navigation property is included
        .GroupBy(rb => rb.Room.RoomType)
        .Select(group => new
        {
            RoomType = group.Key,
            BookingCount = group.Count()
        })
        .OrderByDescending(g => g.BookingCount)
        .ToList();

    ViewBag.RoomTypeStats = data;
    return View();
}
