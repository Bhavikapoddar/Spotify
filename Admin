@model IEnumerable<Hotel1.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<h2>Customer List</h2>

<form method="get" action="@Url.Action("Index")">
    <input type="text" name="searchString" placeholder="Search by Name, Email, Phone" />
    <input type="submit" value="Search" />
</form>

<p><a href="@Url.Action("Create")">Add New Customer</a></p>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Phone</th>
        <th>Email</th>
        <th>ID Proof</th>
        <th>No. of People</th>
        <th>Payment Status</th>
        <th>Current Bill</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Gender</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.IDProof</td>
            <td>@item.NoOfPeople</td>
            <td>@item.PaymentStatus</td>
            <td>@item.CurrentBill</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CustomerID })">Edit</a> |
                <a href="@Url.Action("Details", new { id = item.CustomerID })">Details</a> |
                <a href="@Url.Action("Delete", new { id = item.CustomerID })">Delete</a>
            </td>
        </tr>
    }
</table>
