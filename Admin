[HttpPost]
public ActionResult RefundPassenger(int id)
{
    var passenger = db.Passengers.Find(id);
    if (passenger != null)
    {
        // Add your logic here (e.g., update refund status, send email, etc.)
        TempData["message"] = $"Refund processed for {passenger.FirstName} {passenger.LastName}";
    }

    return RedirectToAction("AddFlight");
}
