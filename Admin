using System;
using System.Linq;
using System.Web.Mvc;
using HotelManagementSystem.Models;

namespace HotelManagementSystem.Controllers
{
    public class RoomBookingsController : Controller
    {
        HotelDbContext db = new HotelDbContext();

        public ActionResult Index()
        {
            var bookings = db.RoomBookings.Include("Customers").Include("Rooms").ToList();
            return View(bookings);
        }

        public ActionResult Create()
        {
            ViewBag.CustomerID = new SelectList(db.Customers, "CustomerID", "Name");
            ViewBag.RoomID = new SelectList(db.Rooms, "RoomID", "RoomNumber");
            return View();
        }

        [HttpPost]
        public ActionResult Create(RoomBookings booking)
        {
            if (booking.CheckInDate < DateTime.Today || booking.CheckOutDate < DateTime.Today)
            {
                ModelState.AddModelError("", "Check-in and Check-out dates must be today or in the future.");
            }
            else if (booking.CheckOutDate < booking.CheckInDate)
            {
                ModelState.AddModelError("", "Check-out date cannot be earlier than Check-in date.");
            }

            if (ModelState.IsValid)
            {
                db.RoomBookings.Add(booking);
                db.SaveChanges();
                return RedirectToAction("Index");
            }

            ViewBag.CustomerID = new SelectList(db.Customers, "CustomerID", "Name", booking.CustomerID);
            ViewBag.RoomID = new SelectList(db.Rooms, "RoomID", "RoomNumber", booking.RoomID);
            return View(booking);
        }

        public ActionResult Delete(int id)
        {
            var booking = db.RoomBookings.Find(id);
            if (booking != null)
            {
                db.RoomBookings.Remove(booking);
                db.SaveChanges();
            }
            return RedirectToAction("Index");
        }
    }
}
