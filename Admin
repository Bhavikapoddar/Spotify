@model IEnumerable<HotelManagementSystem.Models.Room>

@{
    ViewBag.Title = "Rooms List";
}

<h2>Rooms List</h2>

<form method="get">
    <input type="text" name="searchString" placeholder="Search by Room Number" value="@Request.Query["searchString"]" />
    <input type="submit" value="Search" />
</form>

<p>
    <a href="@Url.Action("Create")">Create New Room</a>
</p>

<table border="1" cellpadding="10">
    <tr>
        <th>Room Number</th>
        <th>Room Type</th>
        <th>Capacity</th>
        <th>Price</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.RoomNumber</td>
        <td>@item.RoomType</td>
        <td>@item.Capacity</td>
        <td>@item.Price</td>
        <td>@item.Status</td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.RoomID })">Edit</a> |
            <a href="@Url.Action("Delete", new { id = item.RoomID })">Delete</a> |
            <a href="@Url.Action("Details", new { id = item.RoomID })">Details</a>
        </td>
    </tr>
}
</table>
