using Microsoft.AspNetCore.Mvc;
using HotelManagementSystem.Models;
using System.Linq;

namespace HotelManagementSystem.Controllers
{
    public class StaffsController : Controller
    {
        HotelDbContext db = new HotelDbContext();

        public IActionResult Index(string search)
        {
            var staffList = db.Staffs.ToList();

            if (!string.IsNullOrEmpty(search))
            {
                staffList = staffList
                    .Where(s => s.Name.ToLower().Contains(search.ToLower()) || s.Role.ToLower().Contains(search.ToLower()))
                    .ToList();
            }

            return View(staffList);
        }

        public IActionResult Create()
        {
            ViewBag.RoleList = new List<string> { "Manager", "Receptionist", "Housekeeping", "Security", "Cook" };
            return View();
        }

        [HttpPost]
        public IActionResult Create(Staff staff)
        {
            if (ModelState.IsValid)
            {
                db.Staffs.Add(staff);
                db.SaveChanges();
                return RedirectToAction("Index");
            }
            ViewBag.RoleList = new List<string> { "Manager", "Receptionist", "Housekeeping", "Security", "Cook" };
            return View(staff);
        }

        public IActionResult Edit(int id)
        {
            var staff = db.Staffs.Find(id);
            if (staff == null)
            {
                return NotFound();
            }
            ViewBag.RoleList = new List<string> { "Manager", "Receptionist", "Housekeeping", "Security", "Cook" };
            return View(staff);
        }

        [HttpPost]
        public IActionResult Edit(Staff staff)
        {
            if (ModelState.IsValid)
            {
                db.Staffs.Update(staff);
                db.SaveChanges();
                return RedirectToAction("Index");
            }
            ViewBag.RoleList = new List<string> { "Manager", "Receptionist", "Housekeeping", "Security", "Cook" };
            return View(staff);
        }

        public IActionResult Delete(int id)
        {
            var staff = db.Staffs.Find(id);
            if (staff != null)
            {
                db.Staffs.Remove(staff);
                db.SaveChanges();
            }
            return RedirectToAction("Index");
        }
    }
}
