@model Hotel1.Models.Customer

@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Gender</dt>
        <dd>@Model.Gender</dd>

        <dt>Phone</dt>
        <dd>@Model.Phone</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>ID Proof Photo</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.IDProof))
            {
                <img src="~/Images/IdProofs/@Model.IDProof" alt="ID Proof" width="150" height="150" />
            }
            else
            {
                <span>No image uploaded</span>
            }
        </dd>

        <dt>No. of People</dt>
        <dd>@Model.NoOfPeople</dd>

        <dt>Payment Status</dt>
        <dd>@Model.PaymentStatus</dd>

        <dt>Current Bill</dt>
        <dd>@Model.CurrentBill</dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
